                <Label Text="Blurryface"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
                <BoxView Color="Gray"
             HeightRequest="2"
             HorizontalOptions="Fill" />
                
                <ImageButton x:Name="BtnPaguinaSiguinte" Clicked="BtnPaguinaTres_Clicked" Source="https://e.snmc.io/i/600/s/36f848a4284922d4f2d8312ed88dde92/9764448/twenty-one-pilots-blurryface-Cover-Art.png"
                    HorizontalOptions="Center"
                            HeightRequest="200"
                            WidthRequest="230"
                    VerticalOptions="CenterAndExpand" />

            </StackLayout>

        </Frame>


    </StackLayout>


   


